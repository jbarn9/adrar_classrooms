{% extends 'base.html.twig' %}

{% block title %}Vehicule index
{% endblock %}

{% block body %}
	<h1>Vehicule index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Couleur</th>
				<th>Marque</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for vehicule in vehicules %}
				<tr>
					<td>{{ vehicule.id }}</td>
					<td>{{ vehicule.nom }}</td>
					<td>
						<div style="background-color:{{ vehicule.couleur }};height:30px;width:30px;border-radius:20px;"></div>
						{{ vehicule.couleur }}</td>
					<td>{{ vehicule.marque }}</td>
					<td>
						<a href="{{ path('app_vehicule_show', {'id': vehicule.id}) }}">show</a>
						<a href="{{ path('app_vehicule_edit', {'id': vehicule.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_vehicule_new') }}">Create new</a>
{% endblock %}
