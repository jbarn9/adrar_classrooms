<form method="post" action="{{ path('app_chapters_delete', {'id': chapter.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ chapter.id) }}">
	<div class="btn-delete">
		<button>
			<i class="fa-solid fa-trash" style="color: #f95942; font-size: 2em"></i>
		</button>
	</div>
</form>
